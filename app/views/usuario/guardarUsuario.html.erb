<div class="container">
	<div class="jumbotron">
		<h2>Llena el Formulario</h2>
		<p><%= flash[:notice]%></p>

		<form action="<%= usuario_guarda_form_path %>" method="POST" class="form-horizontal">
			<%= hidden_field_tag :authenticity_token, 
				form_authenticity_token %>
			<div class="form-group">
		    	<label class="control-label col-sm-4">Nombre: </label>
		    	<div class="col-sm-5">
		    		<input name="q" class="form-control" placeholder="Escribe tu Nombre">
		    	</div>
		    </div>
		    <div class="form-group">
		    	<label class="control-label col-sm-4">Edad: </label>
		    	<div class="col-sm-5">
		    		<input name="r" class="form-control" placeholder="Escribe tu Edad">
		    	</div>
		    </div>
		    <div class="form-group">
		    	<label class="control-label col-sm-4">E-mail: </label>
		    	<div class="col-sm-5">
		    		<input name="s" class="form-control" placeholder="Escribe un correo">
		    	</div>
		    </div>
		    <div class="form-group">        
      			<div class="col-sm-offset-4 col-sm-10">
		    		<input type="submit" class="btn btn-success" value="Guardar">
	    		</div>
    		</div>
		</form>
	</div>
